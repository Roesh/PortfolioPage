    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>projectComponent</h4>
    <hr />
    <dl class="row">
        <input type="hidden" asp-for="projectComponent.ID" />
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.projectComponent.projectComponentID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.projectComponent.projectComponentID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.projectComponent.title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.projectComponent.title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.projectComponent.componentDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.projectComponent.componentDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.projectComponent.componentType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.projectComponent.componentType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.projectComponent.nodeDepth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.projectComponent.nodeDepth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.projectComponent.startDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.projectComponent.startDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.projectComponent.completionDate)
        </dt>
        <dd class="col-sm-10">
