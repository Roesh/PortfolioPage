        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.projectComponent.completionDeadline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.projectComponent.completionDeadline)
        </dd>
    </dl>
    
    <form method="post">
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteProjectComponentModal">
            Delete
        </button>
        <a asp-page="/ProjectTracker/MyProjects">Back to Dashboard</a>
    </form>

    <!-- Modal -->
    <div class="modal fade" id="deleteProjectComponentModal" tabindex="-1" role="dialog" aria-labelledby="deleteProjectComponentModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">Confirm Deletion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">                    
                    </button>
                </div>
            <div class="modal-body">
                This component and all its children will be deleted and cannot be restored<br><br>
                Are you sure you would like to delete them?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <form method="post">
                    <input type="hidden" asp-for="projectComponent.ID" />
                    <input type="submit" value="Delete" class="btn btn-danger" />            
                </form>
            </div>
            </div>
        </div>
    </div>
</div>
