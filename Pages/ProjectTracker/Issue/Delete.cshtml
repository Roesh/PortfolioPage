@page
@model PortfolioPage.Pages.ProjectTracker.Issue.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>issue</h4>
    <hr />
    <dl class="row">
        <input type="hidden" asp-for="issueVM.projectComponentID" />
        <input type="hidden" asp-for="issueVM.projectID" />
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.issueVM.issueTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.issueVM.issueTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.issueVM.issueText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.issueVM.issueText)
        </dd>       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.issueVM.projectIssueType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.issueVM.projectIssueType)
        </dd> 
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.issueVM.projectIssuePriority)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.issueVM.projectIssuePriority)
        </dd>
    </dl>

    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteIssueModal">
        Delete
    </button>
    <a asp-page="/ProjectTracker/MyProjects">Back to Dashboard</a>
    

    <!-- Modal -->
    <div class="modal fade" id="deleteIssueModal" tabindex="-1" role="dialog" aria-labelledby="deleteIssueModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">Confirm Deletion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    </button>
                </div>
            <div class="modal-body">
                This action cannot be reversed. Are you sure you want to delete this issue?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <form method="post">
                    <input type="hidden" asp-for="issue.ID" />
                    <input type="submit" value="Delete" class="btn btn-danger" />            
                </form>
            </div>
            </div>
        </div>
    </div>

</div>
