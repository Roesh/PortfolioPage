            <th>
                @Html.DisplayNameFor(model => model.issue[0].issueText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.issue[0].creatingUserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.issue[0].assignedUserID)
