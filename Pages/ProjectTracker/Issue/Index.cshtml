    <tbody>
@foreach (var item in Model.issue) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.issueTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.issueText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.creatingUserID)
