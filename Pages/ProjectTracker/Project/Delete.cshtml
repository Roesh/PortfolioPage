@page
@model PortfolioPage.Pages.ProjectTracker.Project.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.project.title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.project.title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.project.goalDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.project.goalDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.project.startDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.project.startDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.project.completionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.project.completionDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.project.completionDeadline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.project.completionDeadline)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.project.currentProjectStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.project.currentProjectStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.project.currentProjectPhase)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.project.currentProjectPhase)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.project.isPublic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.project.isPublic)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="project.ID" />
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteProjectModal">
            Delete
        </button>
        <a asp-page="/ProjectTracker/MyProjects">Back to Dashboard</a>
    </form>

    <!-- Button trigger modal -->


    <!-- Modal -->
    <div class="modal fade" id="deleteProjectModal" tabindex="-1" role="dialog" aria-labelledby="deleteProjectModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">Confirm Deletion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            <div class="modal-body">
                The project and its associated components cannot be restored once deleted<br><br>
                Are you sure you would like to delete this project?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <form method="post">
                    <input type="hidden" asp-for="project.ID" />
                    <input type="submit" value="Delete" class="btn btn-danger" />            
                </form>
            </div>
            </div>
        </div>
    </div>
</div>
