                <label class="form-check-label">
                    <input class="form-check-input" asp-for="project.isPublic" /> @Html.DisplayNameFor(model => model.project.isPublic)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
