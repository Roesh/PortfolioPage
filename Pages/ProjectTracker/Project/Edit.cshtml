<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="project.ID" />
            <div class="form-group">
                <label asp-for="project.title" class="control-label"></label>
                <input asp-for="project.title" class="form-control" />
                <span asp-validation-for="project.title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="project.description" class="control-label"></label>
                <input asp-for="project.description" class="form-control" />
                <span asp-validation-for="project.description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="project.startDate" class="control-label"></label>
                <input asp-for="project.startDate" class="form-control" />
                <span asp-validation-for="project.startDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="project.completionDate" class="control-label"></label>
                <input asp-for="project.completionDate" class="form-control" />
                <span asp-validation-for="project.completionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="project.completionDeadline" class="control-label"></label>
                <input asp-for="project.completionDeadline" class="form-control" />
                <span asp-validation-for="project.completionDeadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="project.currentProjectStatus" class="control-label"></label>
                <select asp-for="project.currentProjectStatus" class="form-control"></select>
                <span asp-validation-for="project.currentProjectStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="project.currentProjectPhase" class="control-label"></label>
