@page
@model IndexModel
@{
ViewData["Title"] = "Home page";
}

<style>
    .grad-bg-1 {
        background-image: linear-gradient(5deg, #8400ac 0%, #007580 100%);
        border-color: grey;
        border-width: 3px;        
        color: white;
    }

    .grad-bg-2 {
        background-image: linear-gradient(70deg, #8400ac 0%, #007580 100%);
        border-color: grey;
        border-width: 2px;
        color: white;
    }

    .bg-azure {
        background-color: grey;
    }
</style>
<div class="container-lg">

    <div class="row">
        <div class="col card grad-bg-1">
            <div class="row">
                <div class="display-3 mb-4 px-3">Track your projects</div>
            </div>
            <div class="row mb-4 px-3">
                <p>Roshan's project tracking application</p>
            </div>
        </div>
    </div>
    <hr>
    <!-- https://getbootstrap.com/docs/4.4/layout/grid/#horizontal-alignment -->
    <div class="row">
        <div class="col-md-6">
            <div class="display-4 mb-2">Your ongoing projects</div>
        </div>        
        
        <div class="col-md-2 align-self-center ml-auto">
            <button class="btn grad-bg-2 h4">
                + New Project
            </button>                
        </div>
    </div>
    <div class="row">

        <hr>
        <!--Template is:
            
            Project name on row 1, left aligned
            Deadlines on row 2, left aligned. Status of project on row 2, right aligned-->

    </div>

