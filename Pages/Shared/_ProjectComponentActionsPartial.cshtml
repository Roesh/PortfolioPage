@model PortfolioPage.Pages.ProjectTracker.DI_BasePageModel

<div class="row">
    <div class="col" style="display: flex; flex-wrap: wrap;">
        <div class="row card px-1 py-1 shadow">

        @if(Model.viewingUserCanViewDetails) {
            <!-- Generate link to Details pages -->
            <a class="col-auto mx-1 my-1 btn btn-primary" 
                data-toggle="tooltip" data-placement="top" title="View project details" 
                asp-page="/ProjectTracker/Component/Details" 
                asp-route-id="@Model.currentComponent.ID">

                <svg class="bi bi-eye-fill" width="1.3em" height="1.3em" viewBox="0 0 20 20" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M12.5 10a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                <path fill-rule="evenodd" d="M2 10s3-5.5 8-5.5 8 5.5 8 5.5-3 5.5-8 5.5S2 10 2 10zm8 3.5a3.5 3.5 0 100-7 3.5 3.5 0 000 7z" clip-rule="evenodd"></path>
                </svg>
            </a>
        }

        @if(Model.viewingUserCanEdit) {
            <!-- Generate link to Edit pages -->
            <a class="col-auto mx-1 my-1 btn btn-success" 
                data-toggle="tooltip" data-placement="top" title="Update project details"
                asp-page="/ProjectTracker/Component/Edit" asp-route-id="@Model.currentComponent.ID">

                <svg class="bi bi-pencil" width="1.3em" height="1.3em" viewBox="0 0 20 20" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M13.293 3.293a1 1 0 011.414 0l2 2a1 1 0 010 1.414l-9 9a1 1 0 01-.39.242l-3 1a1 1 0 01-1.266-1.265l1-3a1 1 0 01.242-.391l9-9zM14 4l2 2-9 9-3 1 1-3 9-9z" clip-rule="evenodd"></path>
                <path fill-rule="evenodd" d="M14.146 8.354l-2.5-2.5.708-.708 2.5 2.5-.708.708zM5 12v.5a.5.5 0 00.5.5H6v.5a.5.5 0 00.5.5H7v.5a.5.5 0 00.5.5H8v-1.5a.5.5 0 00-.5-.5H7v-.5a.5.5 0 00-.5-.5H5z" clip-rule="evenodd"></path>
                </svg>
            </a>
        }

        @if(Model.viewingUserCanDelete) {
            <!-- Generate link to Delete pages -->
            <a class="col-auto mx-1 my-1 btn btn-danger" 
            data-toggle="tooltip" data-placement="top" title="Delete this project"
            asp-page="/ProjectTracker/Component/Delete" asp-route-id="@Model.currentComponent.ID">

                <svg class="bi bi-trash" width="1.3em" height="1.3em" viewBox="0 0 20 20" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M7.5 7.5A.5.5 0 018 8v6a.5.5 0 01-1 0V8a.5.5 0 01.5-.5zm2.5 0a.5.5 0 01.5.5v6a.5.5 0 01-1 0V8a.5.5 0 01.5-.5zm3 .5a.5.5 0 00-1 0v6a.5.5 0 001 0V8z"></path>
                <path fill-rule="evenodd" d="M16.5 5a1 1 0 01-1 1H15v9a2 2 0 01-2 2H7a2 2 0 01-2-2V6h-.5a1 1 0 01-1-1V4a1 1 0 011-1H8a1 1 0 011-1h2a1 1 0 011 1h3.5a1 1 0 011 1v1zM6.118 6L6 6.059V15a1 1 0 001 1h6a1 1 0 001-1V6.059L13.882 6H6.118zM4.5 5V4h11v1h-11z" clip-rule="evenodd"></path>
                </svg>       
            </a>
        }
        </div>
    </div>
</div>